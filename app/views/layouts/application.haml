!!!
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title= "Living Social data import"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to "Living Social Data Import", root_path, class: 'brand'
    .container
      .content
        - flash.each do |name, msg|
          .alert.alert-success{:class => "flash-#{name}"}
            = msg
        - flash.discard
        = yield